<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/theme_bg">

    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginStart="@dimen/item_margin"
        android:gravity="center"
        android:text="ExpandableLayout Header!"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/item_margin"
        android:scaleType="center"
        android:src="@mipmap/ic_right_back" />

    <ImageView
        android:id="@+id/imageView_more"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/item_margin"
        android:scaleType="center"
        android:src="@mipmap/ic_expandlist_more"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/image_eyes"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_30"
        android:focusable="false"
        android:padding="@dimen/item_margin"
        android:scaleType="center"
        android:src="@mipmap/ic_noeyes"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_noeyes"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_30"
        android:padding="@dimen/item_margin"
        android:scaleType="center"
        android:src="@mipmap/ic_eyes"
        android:visibility="gone" />


</RelativeLayout>