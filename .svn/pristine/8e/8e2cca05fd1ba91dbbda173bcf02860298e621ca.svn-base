<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/grag_by"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grag_by"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/img_filter_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/view_room"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/room"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tvFilterRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/all"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/div_height"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/div_color" />

        <LinearLayout
            android:id="@+id/viewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/style"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tvFilterStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/all"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/div_height"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/div_color" />

        <LinearLayout
            android:id="@+id/viewColor"
            android:layout_marginRight="80dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/color"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tvFilterColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/all"
                android:singleLine="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_height="wrap_content"
        android:id="@+id/img_filter_right"
        android:src="@mipmap/ic_diy_type_black"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>