<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="40dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_pop"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingTop="10dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:text="@string/input_phone" />

        <EditText
            android:id="@+id/edit_theme"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/edit_safa"
            android:paddingLeft="@dimen/dp_5"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_ll"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/orange_ll"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="0.5sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/div_color"
                android:visibility="gone" />

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_dialog_right"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/orange_ll"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>