<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/grag_by"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/theme_bg" />

    <ImageView
        android:id="@+id/banner_home"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_list_height"
        android:background="@mipmap/ic_bottom_background"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_height"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/div_color" />

    <TextView
        android:id="@+id/banner_desc"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_margin"
        android:paddingRight="@dimen/item_margin"
        android:singleLine="true"
        android:text="Small Text"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/grag_by" />


</LinearLayout>