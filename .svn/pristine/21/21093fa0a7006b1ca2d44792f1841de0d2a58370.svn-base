<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:paddingLeft="@dimen/item_margin"
    android:paddingRight="@dimen/item_margin"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/item_order_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginStart="@dimen/item_margin"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="11"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/item_order_price"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/orange_ll"
            android:textSize="@dimen/text_size_12" />
        <TextView
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:id="@+id/item_order_fabric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/text_size_12" />


        <TextView
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:id="@+id/item_order_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="@color/text_gray_light"
            android:textSize="@dimen/text_size_12" />


    </LinearLayout>

    <TextView
        android:id="@+id/item_order_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/select_btn_white"/>
</LinearLayout>
