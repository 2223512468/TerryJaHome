<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/common_view_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.8dp"
    android:background="@drawable/select_btn_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1">
    <ImageView
        android:id="@+id/item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        android:src="@mipmap/newlogo_square" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:text="@string/room"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_14" />


    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_height"
        android:layout_above="@+id/tablayout_bottom"
        android:background="@color/div_color" />

</LinearLayout>
