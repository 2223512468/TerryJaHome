<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EEDADADA"
              android:id="@+id/root"
              android:orientation="vertical"
              android:paddingEnd="0dp"
              android:paddingLeft="100dp"
              android:paddingRight="0dp"
              android:paddingStart="100dp"
              android:paddingTop="@dimen/common_title_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grag_by">

        <TextView
            android:id="@+id/tv_filter_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="@dimen/item_margin"
            android:text="@string/back"
            android:textColor="@color/text_color_black_pressable"/>

        <TextView
            android:id="@+id/tv_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/color"
            android:textColor="@color/text_black"/>
    </RelativeLayout>

    <View
        android:id="@+id/div_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/div_height"
        android:layout_below="@+id/relativeLayout"
        android:background="@color/div_color"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@color/div_color"
        android:dividerHeight="@dimen/div_height"
        android:paddingEnd="0dp"
        android:paddingLeft="@dimen/item_margin"
        android:paddingRight="0dp"
        android:paddingStart="@dimen/item_margin"/>
</LinearLayout>
