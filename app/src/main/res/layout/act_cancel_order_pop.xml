<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:background="@drawable/bg_youhui_transparent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/reasonone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/item_margin"
        android:background="@drawable/bg_white_radio"
        android:gravity="center"
        android:text="@string/no_buy"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/reasontwo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/bg_white_radio"
        android:gravity="center"
        android:text="@string/buy_err"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/reasonthree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/bg_white_radio"
        android:gravity="center"
        android:text="@string/other_reason"
        android:textSize="@dimen/text_size_14" />

    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/item_margin"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/bg_white_radio"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/orange_ll"
        android:textSize="@dimen/text_size_14" />

</LinearLayout>