<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_translate">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="bottom"
        android:background="@color/theme_bg">

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="x"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/to_be_superdesigner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin"
                android:text="@string/designer_name"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_bottom_icon_weight"
                android:text="@string/tobesuperdesigner"
                android:textColor="@color/text_gray_filter"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_select_pay_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/to_be_superdesigner"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/item_margin"
                android:text="@string/pay_way"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/div_height"
                android:background="@color/div_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_weichat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_marginStart="@dimen/item_margin"
                    android:background="@drawable/cb_register"
                    android:button="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_marginStart="@dimen/item_margin"
                    android:src="@mipmap/ic_pay_weichat" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/div_height"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/div_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="@dimen/item_margin"
                android:layout_marginRight="@dimen/item_margin"
                android:layout_marginStart="@dimen/item_margin"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_alipay"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_marginStart="@dimen/item_margin"
                    android:background="@drawable/cb_register"
                    android:button="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/item_margin"
                    android:layout_marginStart="@dimen/item_margin"
                    android:src="@mipmap/ic_pay_alipay" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/div_height"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/div_color" />
        </LinearLayout>

        <Button
            android:id="@+id/user_btn_pay"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_select_pay_way"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/btn_login"
            android:text="支付"
            android:textColor="@color/white" />

    </RelativeLayout>


</LinearLayout>