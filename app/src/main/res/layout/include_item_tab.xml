<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/theme_bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/pic_text_ll"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="图文详情" />

                <View
                    android:id="@+id/indicator_pic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:background="@color/orange_ll"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/div_height"
                android:layout_height="match_parent"
                android:background="@color/by_gray" />

            <RelativeLayout
                android:id="@+id/can_shu_ll"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="产品参数" />

                <View
                    android:id="@+id/indicator_canshu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:background="@color/orange_ll"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/div_height"
                android:layout_height="match_parent"
                android:background="@color/by_gray" />

            <RelativeLayout
                android:id="@+id/shop_introduce_ll"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="购买须知" />

                <View
                    android:id="@+id/indicator_shop"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_3"
                    android:layout_alignParentBottom="true"
                    android:background="@color/orange_ll"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>